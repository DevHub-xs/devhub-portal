# DevHub Backend Orchestration Configuration
# This file controls how the DevHub backend manages this project

version: "1.0"

# DevHub platform settings
platform:
  # How often DevHub updates .devhub/ files
  syncInterval: 60s           # 60 seconds
  
  # What to monitor
  monitoring:
    deployment: true
    security: true
    quality: true
    integration: true
  
  # Security scanning
  security:
    scanOnDeploy: true
    scanSchedule: "0 1 * * *"  # Daily at 1 AM
  
  # Quality checks
  quality:
    runTests: true
    requireCoverage: 75        # Minimum coverage %
    lintOnCommit: true

# Notification settings
notifications:
  deployment:
    slack: true
    email: true
  security:
    critical: immediate
    high: 1h
  quality:
    failedTests: immediate
